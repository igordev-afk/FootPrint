<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:visibility="visible">

    <!-- Задний серый фон, который всегда остается видимым -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9A221E1E"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Содержимое conclusionToast -->
        <LinearLayout
            android:id="@+id/conclusionToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/popup_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="50dp"
            android:paddingEnd="30dp"
            android:paddingBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2"
                android:text="@string/solutions"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/close_button"
                android:padding="10dp"
                android:text="✕"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Остальное содержимое, которое может прокручиваться -->
    <!-- Добавьте остальные элементы, которые вы хотите прокручивать здесь -->

</androidx.core.widget.NestedScrollView>